{
  "name": "clarity-cybersecurity-frontend",
  "version": "1.0.0",
  "description": "Secure frontend implementation showcasing cybersecurity best practices",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:security": "eslint . --ext ts,tsx --config .eslintrc.security.js",
    "test": "vitest",
    "test:security": "vitest run --config vitest.security.config.ts",
    "security:scan": "npm audit && snyk test",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.8.0",
    "firebase": "^10.7.0",
    "@tanstack/react-query": "^5.17.0",
    "react-i18next": "^14.0.0",
    "framer-motion": "^10.16.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.2.1",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "eslint-plugin-security": "^1.7.1",
    "typescript": "^5.2.2",
    "vite": "^5.0.8",
    "vitest": "^1.2.0",
    "snyk": "^1.1266.0"
  },
  "keywords": [
    "cybersecurity",
    "security",
    "react",
    "typescript",
    "authentication",
    "authorization",
    "frontend-security"
  ],
  "author": "Clarity Cybersecurity Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/clarity-cybersecurity/showcase.git"
  },
  "bugs": {
    "url": "https://github.com/clarity-cybersecurity/showcase/issues"
  },
  "homepage": "https://github.com/clarity-cybersecurity/showcase#readme"
}